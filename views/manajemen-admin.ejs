<main class="flex-grow w-full flex items-center justify-center p-4 sm:p-6 lg:p-8">
  <div class="w-full max-w-4xl mx-auto bg-[#F5F5DC]/80 backdrop-blur-md rounded-3xl shadow-2xl p-8 md:p-12">
    <h1 class="text-4xl font-bold text-[#4A5C3D] text-center mb-10">Akun Admin</h1>

    <div class="space-y-4">
      <% if (adminList && adminList.length > 0) { %>
        <% adminList.forEach(admin => { %>
          <div class="flex justify-between items-center bg-white p-4 rounded-xl shadow">
            <div>
              <span class="font-semibold text-gray-700"><%= admin.first_name %> <%= admin.last_name %></span>
              <p class="text-sm text-gray-500"><%= admin.email %></p>
            </div>
            <div class="flex items-center gap-2">

              <a href="/auth/admin/edit/<%= admin.id %>" class="text-sm font-bold text-white bg-yellow-500 hover:bg-yellow-600 py-1 px-4 rounded-full transition-colors">Edit</a>
              
              <form action="/auth/admin/delete/<%= admin.id %>" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus admin ini?');">
                <button type="submit" class="text-sm font-bold text-white bg-red-600 hover:bg-red-700 py-1 px-4 rounded-full transition-colors">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-gray-500">Belum ada akun admin yang dibuat.</p>
      <% } %>
    </div>

    <div class="flex justify-end mt-8">
      <a href="/auth/admin/tambah" class="bg-[#4A5C3D] text-white font-bold py-2 px-6 rounded-full shadow-lg hover:bg-[#3a4a31] transition-colors">
        Tambah Admin Baru
      </a>
    </div>
  </div>
</main>
