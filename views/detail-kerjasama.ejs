<main class="flex-grow w-full flex items-center justify-center p-4 sm:p-6 lg:p-8">
  <div class="w-full max-w-4xl mx-auto bg-[#F5F5DC]/80 backdrop-blur-md rounded-3xl shadow-2xl p-8 md:p-12">
    <h1 class="text-4xl font-bold text-[#4A5C3D] text-center mb-8">Detail Pengajuan Kerjasama</h1>
    
    <div class="space-y-4 text-lg text-gray-800">
      <p><span class="font-bold w-40 inline-block">Nama Pengaju</span>: <%= kerjasama.nama %></p>
      <p><span class="font-bold w-40 inline-block">Tanggal Masuk</span>: <%= new Date(kerjasama.tanggal).toLocaleDateString('id-ID', { day: '2-digit', month: 'long', year: 'numeric' }) %></p>
      <p><span class="font-bold w-40 inline-block">Untuk UKM</span>: <%= kerjasama.ukm %></p>
      <p><span class="font-bold w-40 inline-block">Tentang</span>: <%= kerjasama.tentang %></p>
      <div class="pt-2">
        <p class="font-bold w-40 inline-block mb-2">Detail Pengajuan:</p>
        <div class="bg-white/60 p-4 rounded-lg border">
          <p><%= kerjasama.detail %></p>
        </div>
      </div>
    </div>

    <div class="flex justify-end items-center gap-4 mt-10">
      <form action="/auth/kerja-sama/update-status/<%= kerjasama.id %>" method="POST">
        <input type="hidden" name="status" value="ditolak">
        <button type="submit" class="bg-red-600 text-white font-bold py-2 px-8 rounded-full shadow-lg hover:bg-red-700 transition-colors">
          Tolak
        </button>
      </form>
      <form action="/auth/kerja-sama/update-status/<%= kerjasama.id %>" method="POST">
        <input type="hidden" name="status" value="diterima">
        <button type="submit" class="bg-green-600 text-white font-bold py-2 px-8 rounded-full shadow-lg hover:bg-green-700 transition-colors">
          Terima
        </button>
      </form>
    </div>
  </div>
</main>
