<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= berita.judul %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script>
</head>
<body class="bg-gray-50">

<!-- Header -->
<div class="bg-emerald-50 shadow-lg sticky top-0 z-50 w-screen">
  <div class="container mx-auto px-2">
    <div class="flex items-center justify-between py-4">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
          <i class="fas fa-university text-emerald-700 text-xl"></i>
        </div>
        <div>
          <h1 class="text-emerald-700 text-xl font-bold">Sigma Unand</h1>
          <p class="text-emerald-700 text-sm">Universitas Andalas</p>
        </div>
      </div>
      <nav class="hidden md:flex space-x-6">
        <a href="/auth/dashboard" class="text-emerald-700 hover:text-emerald-200">Beranda</a>
        <a href="/auth/faq" class="text-emerald-700 hover:text-emerald-200">UKM</a>
        <a href="/user/kegiatan" class="text-emerald-700 hover:text-emerald-200">Kegiatan</a>
        <a href="/user/berita" class="text-emerald-700 hover:text-emerald-200">Berita</a>
        <a href="/auth/faq" class="text-emerald-700 hover:text-emerald-200">FAQ</a>
        <a href="#" class="text-emerald-700 hover:text-emerald-200">Kontak</a>
      </nav>
      <button class="md:hidden text-white" onclick="toggleMobileMenu()">
        <i class="fas fa-bars text-xl"></i>
      </button>
    </div>
  </div>
</div>

<!-- Breadcrumb -->
<section class="bg-white border-b">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center space-x-2 text-sm">
      <a href="/auth/dashboard" class="text-emerald-700 hover:text-emerald-800">Beranda</a>
      <i class="fas fa-chevron-right text-gray-400"></i>
      <span class="text-gray-600">Detail Berita</span>
    </div>
  </div>
</section>

<!-- Konten Berita -->
<div class="container mx-auto px-4 py-8 bg-white shadow-md rounded-md mt-6">
  <h1 class="text-2xl font-bold text-emerald-700 mb-2"><%= berita.judul %></h1>
  <p class="text-sm text-gray-500 mb-4">
    <em>Diterbitkan pada <%= berita.tanggal.toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></em>
  </p>

  <% if (berita.gambar) { %>
    <% 
      const rawPath = berita.gambar.replace(/\\/g, "/");
      const pathGambar = rawPath.startsWith("/uploads/")
        ? rawPath
        : "/uploads/" + rawPath;
    %>
    <img 
      src="<%= pathGambar %>" 
      alt="Gambar Berita" 
      class="w-full max-w-3xl mx-auto border border-gray-200 rounded-md mb-6"
      onerror="this.style.display='none'"
    >
  <% } %>

  <div class="text-gray-800 text-base leading-relaxed isi-berita">
    <%= berita.isi %>
  </div>

  <div class="mt-6">
    <a href="/user/berita" class="text-emerald-600 hover:underline">â† Kembali ke Daftar Berita</a>
  </div>
</div>

</body>
</html>
