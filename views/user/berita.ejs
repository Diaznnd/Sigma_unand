    <!-- Featured News -->
    <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
        <h3 class="text-2xl font-bold text-gray-800 mb-8">Berita Utama</h3>
        <div class="grid lg:grid-cols-2 gap-8">

            <% if (daftarBerita.length > 0) { %>
                <!-- Artikel Utama -->
                <% if (daftarBerita.length > 0) { 
    let utama = daftarBerita[0]; %>

    <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition duration-300 news-item" data-category="<%= utama.kategori ? utama.kategori.toLowerCase() : '' %>">
        <div class="h-64 overflow-hidden">
<img src="<%= utama.gambar %>" alt="<%= utama.judul %>">
        </div>
        <div class="p-6">
            <div class="flex items-center mb-3">
                <span class="bg-emerald-100 text-emerald-800 text-xs font-semibold px-3 py-1 rounded-full">
<%= utama.kategori ? utama.kategori.toUpperCase() : 'UMUM' %>
                </span>
                <span class="text-gray-500 text-sm ml-3">
                    <%= new Date(utama.createdAt).toLocaleDateString('id-ID') %>
                </span>
            </div>
            <h2 class="text-2xl font-bold text-gray-800 mb-3 hover:text-emerald-700 cursor-pointer">
                <%= utama.judul %>
            </h2>
            <p class="text-gray-600 mb-4">
                <%= utama.isi.substring(0, 150) %>...
            </p>
            <a href="#" class="inline-flex items-center text-emerald-700 font-semibold hover:text-emerald-800 transition duration-300">
                Baca Selengkapnya 
                <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>
    </article>

<% } else { %>
    <p class="text-gray-500">Belum ada berita tersedia.</p>
<% } %>


                <!-- Artikel Tambahan -->
                <div class="space-y-6">
                    <% daftarBerita.slice(1, 3).forEach(item => { %>
                        <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 news-item" data-category="<%= item.kategori.toLowerCase() %>">
