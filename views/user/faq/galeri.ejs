<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8">
      <h3 class="text-3xl font-bold text-gray-800 mb-4">Galeri Kegiatan</h3>
      <p class="text-gray-600">Dokumentasi kegiatan-kegiatan menarik dari berbagai UKM</p>
    </div>

    <div class="grid md:grid-cols-4 gap-4">
      <% if (galeri && galeri.length > 0) { %>
        <% galeri.forEach(g => { %>
          <div class="bg-white border rounded-lg shadow hover:shadow-lg transition duration-300 overflow-hidden">
            <img src="/uploads/galeri/<%= g.gambar %>" alt="<%= g.judul %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h4 class="font-semibold text-lg text-gray-800 mb-2"><%= g.judul %></h4>
              <p class="text-sm text-gray-600"><%= g.deskripsi %></p>
              <p class="text-xs text-gray-400 mt-2"><%= new Date(g.tanggal).toLocaleDateString() %></p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center text-gray-500 col-span-4">Belum ada dokumentasi kegiatan.</p>
      <% } %>
    </div>
  </div>
</section>
