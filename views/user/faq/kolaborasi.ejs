                            <p class="text-gray-600">Isi formulir di bawah untuk mengajukan kolaborasi dengan UKM lain</p>
                        </div>
                    </div>





                <form id="kolaborasiForm" class="space-y-6" action="/user/faq/kolaborasi/add" method="POST">              
                        <!-- Informasi Dasar -->
                        <div class="bg-emerald-50 p-4 rounded-lg">
                            <h4 class="text-lg font-semibold text-emerald-800 mb-4 flex items-center">
                                <i class="fas fa-info-circle mr-2"></i>
                                Informasi Dasar
                            </h4>
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">UKM Pengaju</label>
                                    <select name="ukmPengaju" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" required>
                                        <option value="">Pilih UKM Anda</option>
                                        <option value="ukm-music">UKM Music</option>
                                        <option value="ukm-olahraga">UKM Olahraga</option>
                                        <option value="ukm-seni">UKM Seni Budaya</option>
                                        <option value="ukm-wirausaha">UKM Kewirausahaan</option>
                                        <option value="ukm-pecinta-alam">UKM Pecinta Alam</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">UKM Tujuan Kolaborasi</label>
                                    <select name="ukmTujuan" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" required>
                                        <option value="">Pilih UKM Tujuan</option>
                                        <option value="ukm-teater">UKM Teater</option>
                                        <option value="ukm-fotografi">UKM Fotografi</option>
                                        <option value="ukm-debat">UKM Debat</option>
                                        <option value="ukm-teknologi">UKM Teknologi</option>
                                        <option value="ukm-volunteer">UKM Volunteer</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Detail Kolaborasi -->
                        <div>
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                                <i class="fas fa-clipboard-list mr-2"></i>
                                Detail Kolaborasi
                            </h4>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Judul Kolaborasi</label>
                                    <input type="text" name="judul" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Masukkan judul kolaborasi" required>
                                </div>
                                <div class="grid md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Jenis Kolaborasi</label>
                                        <select name="jenis" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" required>
                                            <option value="">Pilih Jenis</option>
                                            <option value="event">Event/Acara</option>
                                            <option value="workshop">Workshop/Pelatihan</option>
                                            <option value="kompetisi">Kompetisi</option>
                                            <option value="pengabdian">Pengabdian Masyarakat</option>
                                            <option value="penelitian">Penelitian</option>
                                            <option value="lainnya">Lainnya</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Target Peserta</label>
                                        <input type="number" name="targetPeserta" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Jumlah peserta" required>
                                    </div>
                                </div>
                                <div class="grid md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Tanggal Mulai</label>
                                        <input type="date" name="tanggalMulai" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" required>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">Tanggal Selesai</label>
                                        <input type="date"  name="tanggalSelesai" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" required>
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Lokasi/Tempat</label>
                                    <input type="text" name="lokasi" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Masukkan lokasi kegiatan" required>
                                </div>
                            </div>
                        </div>

                        <!-- Deskripsi dan Tujuan -->
                        <div>
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                                <i class="fas fa-bullseye mr-2"></i>
                                Deskripsi dan Tujuan
                            </h4>
                            <div class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Deskripsi Kolaborasi</label>
                                    <textarea name="deskripsi" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Jelaskan secara detail tentang kolaborasi yang diusulkan" required></textarea>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Tujuan Kolaborasi</label>
                                    <textarea name="tujuan" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Sebutkan tujuan yang ingin dicapai dari kolaborasi ini" required></textarea>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Kontribusi yang Diharapkan</label>
                                    <textarea name="kontribusi"  rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Jelaskan kontribusi yang diharapkan dari masing-masing UKM" required></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Anggaran -->
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <h4 class="text-lg font-semibold text-blue-800 mb-4 flex items-center">
                                <i class="fas fa-money-bill-wave mr-2"></i>
                                Rencana Anggaran
                            </h4>
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Estimasi Total Anggaran</label>
                                    <input  name="anggaran" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Dalam Rupiah" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Sumber Dana</label>
                                    <select  name="sumberDana" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                                        <option value="">Pilih Sumber Dana</option>
                                        <option value="internal">Dana Internal UKM</option>
                                        <option value="universitas">Dana Universitas</option>
                                        <option value="sponsor">Sponsorship</option>
                                        <option value="hibah">Hibah/Grant</option>
                                        <option value="campuran">Campuran</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-4">
                                <label class="block text-sm font-medium text-gray-700 mb-2">Rincian Anggaran</label>
                                <textarea name="rincianAnggaran" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Jelaskan rincian penggunaan anggaran"></textarea>
                            </div>
                        </div>

                        <!-- Contact Person -->
                        <div>
                            <h4 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                                <i class="fas fa-user-tie mr-2"></i>
                                Penanggung Jawab
                            </h4>
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Nama Penanggung Jawab</label>
                                    <input type="text" name="penanggungJawab" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Nama lengkap" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Jabatan</label>
                                    <input type="text" name="jabatan" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="Jabatan dalam UKM" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">No. Telepon/WhatsApp</label>
                                    <input type="tel" name="noTelepon"  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="08xxxxxxxxx" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                    <input type="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500" placeholder="email@unand.ac.id" required>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                            <button type="button" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition duration-300">
                                Draft
                            </button>
                            <button type="submit" class="px-8 py-2 bg-emerald-700 text-white rounded-md hover:bg-emerald-800 transition duration-300 flex items-center">
                                <i class="fas fa-paper-plane mr-2"></i>
                                Ajukan Kolaborasi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Status Pengajuan -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-chart-pie mr-2 text-emerald-700"></i>
                        Status Pengajuan Anda
                    </h3>
                    <div class="space-y-3">
                        <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
