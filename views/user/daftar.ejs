    <script>
        // Form handling
        document.getElementById('registrationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulate form submission
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.textContent;
            
            submitBtn.textContent = 'Mengirim...';
            submitBtn.disabled = true;
            
            setTimeout(() => {
                alert('Pendaftaran berhasil dikirim! Kami akan menghubungi Anda dalam 2-3 hari kerja.');
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
                this.reset();
            }, 2000);
        });

        // File upload simulation
        document.querySelectorAll('.border-dashed').forEach(uploadArea => {
            uploadArea.addEventListener('click', function() {
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = this.textContent.includes('foto') ? 'image/*' : '.pdf';
                input.click();
                
                input.addEventListener('change', function() {
                    if (this.files[0]) {
                        const fileName = this.files[0].name;
                        uploadArea.innerHTML = `
                            <div class="w-12 h-12 bg-emerald-100 rounded-lg mx-auto mb-3 flex items-center justify-center">
                                <div class="w-6 h-6 bg-emerald-600 rounded"></div>
                            </div>
                            <div class="text-sm text-emerald-700 font-medium">${fileName}</div>
                            <div class="text-xs text-gray-500 mt-1">File berhasil dipilih</div>
                        `;
                        uploadArea.classList.remove('border-gray-300');
                        uploadArea.classList.add('border-emerald-500', 'bg-emerald-50');
                    }
                });
            });
        });
    </script>
