<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Kegiatan</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script>
</head>
<!-- Header -->

<div class="bg-emerald-50 shadow-lg sticky top-0 z-50 container-fluid w-screen">
    <div class="container mx-auto px-2">
        <div class="flex items-center justify-between py-4">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
                    <i class="fas fa-university text-emerald-700 text-xl"></i>
                </div>
                <div>
                    <h1 class="text-emerald-700 text-xl font-bold">Sigma Unand</h1>
                    <p class="text-emerald-700 text-sm">Universitas Andalas</p>
                </div>
            </div>
            <nav class="hidden md:flex space-x-6">
                <a href="/pengguna" class="text-emerald-700 hover:text-emerald-200 transition duration-300">Beranda</a>
                <a href="/user/ukm" class="text-emerald-700 hover:text-emerald-200 transition duration-300">UKM</a>
                <a href="/user/kegiatan" class="text-emerald-700 hover:text-emerald-200 transition duration-300">Kegiatan</a>
                <a href="/user/berita" class="text-emerald-700 hover:text-emerald-200 transition duration-300">Berita</a>
                <a href="/auth/faq" class="text-emerald-700 hover:text-emerald-200 transition duration-300">FAQ</a>

            </nav>
            <button class="md:hidden text-white" onclick="toggleMobileMenu()">
                <i class="fas fa-bars text-xl"></i>
            </button>
        </div>
    </div>
</div>

<body class="bg-gray-50">

  <div class="container mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6 text-emerald-700">Kegiatan Terbaru</h1>

    <% if (daftarKegiatan.length > 0) { %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% daftarKegiatan.forEach(kegiatan => { %>
          <div class="bg-white border border-emerald-200 rounded-lg p-4 hover:shadow-md transition duration-300">
            <div class="flex items-start space-x-4">
              <div class="bg-emerald-700 text-white rounded-lg p-3 text-center min-w-16">
                <div class="text-lg font-bold">
                  <%= new Date(kegiatan.tanggal).getDate() %>
                </div>
                <div class="text-sm">
                  <%= new Date(kegiatan.tanggal).toLocaleString('id-ID', { month: 'short' }).toUpperCase() %>
                </div>
              </div>
              <div class="flex-1">
                <h4 class="font-semibold text-gray-800 mb-1"><%= kegiatan.judul %></h4>
                <p class="text-sm text-gray-500 mb-1">
                  Oleh: <%= kegiatan.organisasi?.namaOrg || 'UKM Tidak Diketahui'Â %>
                </p>
                <p class="text-gray-600 text-sm mb-2">
                  <i class="fas fa-map-marker-alt mr-1"></i> <%= kegiatan.lokasi %>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-500">Belum ada kegiatan yang akan datang.</p>
    <% } %>
  </div>

</body>
</html>