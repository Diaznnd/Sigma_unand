<%- include('partials/sidebar') %>
<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br ">
  <div class="p-8 max-w-6xl mx-auto">
    <!-- Header Profile Card -->
    <div class="relative overflow-hidden bg-white rounded-2xl shadow-xl border border-gray-100 mb-8 animate-fade-in">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 via-purple-600 to-blue-600 opacity-5"></div>

      <div class="relative p-8 flex flex-col lg:flex-row lg:items-center gap-8">
        <!-- Logo Section -->
        <div class="flex-shrink-0 animate-float">
          <div class="relative">
            <% if (ukm.logo) { %>
              <img src="<%= ukm.logo %>" alt="Logo UKM" class="w-32 h-32 rounded-2xl object-cover shadow-2xl" />
            <% } else { %>
              <div class="w-32 h-32 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white text-3xl font-bold shadow-2xl">
                UKM
              </div>
            <% } %>
            <div class="absolute -top-2 -right-2 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
              <span class="text-white text-xs">âœ“</span>
            </div>
          </div>
        </div>

        <!-- Info Section -->
        <div class="flex-1 animate-slide-up">
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
              <%= ukm.namaOrg %>
            </h1>
            <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
              <%= ukm.status === 'A' ? 'Aktif' : ukm.status === 'P' ? 'Pending' : 'Tidak Aktif' %>
            </span>
          </div>

          <% if (ukm.tanggalBerdiri) { %>
            <div class="flex items-center gap-2 text-gray-600 mb-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span>Berdiri sejak: <%= new Date(ukm.tanggalBerdiri).toLocaleDateString('id-ID') %></span>
            </div>
          <% } %>

          <p class="text-gray-700 text-lg leading-relaxed mb-6">
            <%= ukm.deskripsi %>
          </p>

          <!-- Social Links -->
          <div class="flex flex-wrap gap-4">
            <% if (ukm.instagram) { %>
              <a href="<%= ukm.instagram %>" target="_blank" class="group flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-pink-500 to-purple-600 text-white rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <i class="fab fa-instagram"></i>
                <span>Instagram</span>
              </a>
            <% } %>
            <% if (ukm.website) { %>
              <a href="<%= ukm.website %>" target="_blank" class="group flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-blue-500 to-cyan-600 text-white rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <i class="fas fa-globe"></i>
                <span>Website</span>
              </a>
            <% } %>
          </div>
        </div>

        <!-- Action Button -->
        <div class="flex-shrink-0">
          <a href="/adminukm/profil/edit" class="group inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white px-6 py-3 rounded-xl font-medium hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <i class="fas fa-edit group-hover:rotate-12 transition-transform"></i>
            <span>Edit Profil</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Additional Info Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Visi & Misi -->
      <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Visi & Misi</h3>
        <div class="space-y-4">
          <div>
            <h4 class="font-semibold text-gray-700 mb-2">Visi</h4>
            <p class="text-gray-600 text-sm leading-relaxed"><%= ukm.visi || '-' %></p>
          </div>
          <div>
            <h4 class="font-semibold text-gray-700 mb-2">Misi</h4>
            <p class="text-gray-600 text-sm leading-relaxed"><%= ukm.misi || '-' %></p>
          </div>
        </div>
      </div>

      <!-- Kontak -->
      <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Kontak</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <i class="fas fa-envelope text-gray-500"></i>
            <span class="text-gray-600 text-sm"><%= ukm.email || 'ukm@universitas.ac.id' %></span>
          </div>
          <div class="flex items-center gap-3">
            <i class="fas fa-map-marker-alt text-gray-500"></i>
            <span class="text-gray-600 text-sm"><%= ukm.alamat || '-' %></span>
          </div>
          <div class="flex items-center gap-3">
            <i class="fas fa-phone text-gray-500"></i>
            <span class="text-gray-600 text-sm"><%= ukm.kontak || '-' %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
