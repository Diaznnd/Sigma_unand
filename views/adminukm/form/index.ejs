<%- include('../partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-gray-50 to-white p-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Pengaturan Formulir Pendaftaran</h1>
    <a href="/adminukm/form/tambah" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">+ Tambah Field</a>
  </div>

  <% if (fields.length === 0) { %>
    <div class="bg-white p-6 rounded shadow text-gray-600 text-center">
      Belum ada field ditambahkan.
    </div>
  <% } else { %>
    <div class="bg-white rounded-xl shadow overflow-hidden border">
      <table class="w-full table-auto">
        <thead class="bg-indigo-100 text-indigo-700">
          <tr>
            <th class="px-4 py-2 text-left">Label</th>
            <th class="px-4 py-2 text-left">Tipe</th>
            <th class="px-4 py-2 text-left">Wajib</th>
            <th class="px-4 py-2 text-left">Opsi</th>
            <th class="px-4 py-2 text-left">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% fields.forEach(field => { %>
            <tr class="border-t">
              <td class="px-4 py-2"><%= field.label %></td>
              <td class="px-4 py-2 capitalize"><%= field.type %></td>
              <td class="px-4 py-2"><%= field.required ? 'Ya' : 'Tidak' %></td>
              <td class="px-4 py-2"><%= field.options || '-' %></td>
              <td class="px-4 py-2">
                <a href="/adminukm/form/edit/<%= field.id %>" class="text-indigo-600 hover:underline text-sm">Edit</a>
                <form action="/adminukm/form/hapus/<%= field.id %>" method="POST" class="inline" onsubmit="return confirm('Yakin ingin menghapus field ini?')">
                  <button type="submit" class="text-red-600 hover:underline text-sm ml-2">Hapus</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</main>
