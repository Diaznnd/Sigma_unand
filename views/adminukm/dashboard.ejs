<%- include('partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-white to-gray-50 p-8">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Dashboard UKM</h1>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
    <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
      <p class="text-sm text-gray-500">Jumlah Anggota</p>
      <p class="text-3xl font-bold text-indigo-700"><%= stats.totalAnggota %></p>
    </div>
    <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
      <p class="text-sm text-gray-500">Jumlah Kegiatan</p>
      <p class="text-3xl font-bold text-indigo-700"><%= stats.totalKegiatan %></p>
    </div>
    <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
      <p class="text-sm text-gray-500">Jumlah Kegiatan</p>
      <p class="text-3xl font-bold text-indigo-700"><%= stats.totalBerita %></p>
    </div>
    <div class="bg-white p-6 rounded-xl shadow border border-gray-200">
      <p class="text-sm text-gray-500">Pengurus Aktif</p>
      <p class="text-3xl font-bold text-indigo-700"><%= stats.pengurusAktif %></p>
    </div>
  </div>
  <% if (showReminder) { %>
  <div class="bg-yellow-100 border border-yellow-300 text-yellow-800 p-4 rounded-lg mb-6 flex items-start justify-between">
    <div>
      <h3 class="font-bold">Profil UKM Belum Lengkap</h3>
      <p>Silakan lengkapi profil UKM Anda agar fitur dapat digunakan sepenuhnya.</p>
    </div>
    <div class="flex gap-2">
      <a href="/adminukm/profil" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">Isi Sekarang</a>
      <form action="/adminukm/tunda-profil" method="POST">
        <button type="submit" class="bg-gray-200 text-gray-700 px-3 py-1 rounded hover:bg-gray-300">Ingatkan Saya Nanti</button>
      </form>
    </div>
  </div>
<% } %>

</main>
