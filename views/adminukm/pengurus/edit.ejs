<%- include('../partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-gray-50 to-white p-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold text-emerald-800 mb-6">Edit Pengurus</h1>

    <form action="/adminukm/pengurus/edit/<%= pengurus.id %>" method="POST" enctype="multipart/form-data" class="space-y-6 bg-white p-6 rounded-xl shadow border border-gray-200">
      <div>
        <label class="block text-sm font-medium text-gray-700">Nama</label>
        <input type="text" name="nama" value="<%= pengurus.nama %>" required class="w-full p-2 border rounded mt-1" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Jabatan</label>
        <input type="text" name="jabatan" value="<%= pengurus.jabatan %>" required class="w-full p-2 border rounded mt-1" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Periode</label>
        <input type="text" name="periode" value="<%= pengurus.periode %>" required class="w-full p-2 border rounded mt-1" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700">Foto Baru (opsional)</label>
        <input type="file" name="foto" class="w-full border p-2 rounded mt-1" />
        <% if (pengurus.foto) { %>
          <img src="<%= pengurus.foto %>" alt="Foto Pengurus" class="w-24 h-24 object-cover mt-2 rounded" />
        <% } %>
      </div>

      <div>
        <button type="submit" class="bg-emerald-600 text-white px-6 py-2 rounded hover:bg-emerald-700 transition">Simpan Perubahan</button>
      </div>
    </form>
  </div>
</main>
   