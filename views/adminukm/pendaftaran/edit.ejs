<%- include('../partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-gray-50 to-white p-8">
  <div class="max-w-3xl mx-auto bg-white rounded-xl shadow p-6 border border-gray-200">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Informasi Pendaftaran</h1>

    <form action="/adminukm/pendaftaran/info/edit" method="POST" enctype="multipart/form-data" class="space-y-5">
      <!-- Deskripsi -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Deskripsi Pendaftaran</label>
        <textarea name="deskripsi" rows="6" class="w-full p-3 border rounded" placeholder="Tuliskan informasi pendaftaran..."><%= info?.deskripsi || '' %></textarea>
      </div>

      <!-- Dokumen Upload -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">File Tambahan (PDF / Word)</label>
        <input type="file" name="file1" accept=".pdf,.doc,.docx" class="w-full border p-2 rounded bg-white">
        <% if (info?.file1) { %>
          <p class="mt-1 text-sm">
            File saat ini: <a href="<%= info.file1 %>" target="_blank" class="text-blue-600 hover:underline">Lihat</a>
          </p>
        <% } %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">File Tambahan 2 (opsional)</label>
        <input type="file" name="file2" accept=".pdf,.doc,.docx" class="w-full border p-2 rounded bg-white">
        <% if (info?.file2) { %>
          <p class="mt-1 text-sm">
            File saat ini: <a href="<%= info.file2 %>" target="_blank" class="text-blue-600 hover:underline">Lihat</a>
          </p>
        <% } %>
      </div>

      <!-- Submit -->
      <div class="pt-4">
        <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700 transition">
          Simpan Perubahan
        </button>
        <a href="/adminukm/pendaftaran/info" class="ml-3 text-gray-600 hover:underline">Batal</a>
      </div>
    </form>
  </div>
</main>
