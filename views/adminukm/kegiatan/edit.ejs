<%- include('../partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-gray-50 to-white p-8">
  <div class="max-w-3xl mx-auto bg-white rounded-xl shadow p-6 border border-gray-200">
    <h1 class="text-2xl font-bold text-emerald-700 mb-6">Edit Kegiatan</h1>

    <form action="/adminukm/kegiatan/edit/<%= kegiatan.id %>" method="POST" class="space-y-5">
      <!-- judul Kegiatan -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Nama Kegiatan</label>
        <input type="text" name="judul" value="<%= kegiatan.judul %>" required 
               class="mt-1 w-full p-2 border rounded-md focus:ring-emerald-500 focus:border-emerald-500">
      </div>

      <!-- Deskripsi -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Deskripsi</label>
        <textarea name="deskripsi" rows="4" required 
                  class="mt-1 w-full p-2 border rounded-md focus:ring-emerald-500 focus:border-emerald-500"><%= kegiatan.deskripsi %></textarea>
      </div>

      <!-- Tanggal -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Tanggal Kegiatan</label>
        <input type="date" name="tanggal" value="<%= kegiatan.tanggal.toISOString().slice(0,10) %>" required 
               class="mt-1 w-full p-2 border rounded-md focus:ring-emerald-500 focus:border-emerald-500">
      </div>

      <!-- Tombol -->
      <div class="pt-4 flex justify-end gap-3">
        <a href="/adminukm/kegiatan" class="text-gray-600 hover:underline">Batal</a>
        <button type="submit" class="bg-emerald-600 text-white px-5 py-2 rounded-md hover:bg-emerald-700 transition">
          Update Kegiatan
        </button>
      </div>
    </form>
  </div>
</main>
