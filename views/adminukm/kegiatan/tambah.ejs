<%- include('../partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-gray-50 to-white p-8">
  <div class="max-w-3xl mx-auto bg-white p-6 rounded-xl shadow border border-gray-200">
    <h1 class="text-2xl font-bold text-indigo-800 mb-6">Tambah Kegiatan</h1>

    <form action="/adminukm/kegiatan/tambah" method="POST" class="space-y-5">
      
      <!-- Judul Kegiatan -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Judul Kegiatan</label>
        <input type="text" name="judul" required class="w-full mt-1 p-2 border rounded" placeholder="Contoh: Seminar Kewirausahaan" />
      </div>

      <!-- Deskripsi -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Deskripsi</label>
        <textarea name="deskripsi" rows="5" required class="w-full mt-1 p-2 border rounded" placeholder="Tuliskan detail kegiatan..."></textarea>
      </div>

      <!-- Tanggal -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Tanggal Pelaksanaan</label>
        <input type="date" name="tanggal" required class="w-full mt-1 p-2 border rounded" />
      </div>

      <!-- Lokasi -->
      <div>
        <label class="block text-sm font-medium text-gray-700">Lokasi</label>
        <input type="text" name="lokasi" class="w-full mt-1 p-2 border rounded" placeholder="Contoh: Aula Fakultas Teknik" />
      </div>

      <!-- Tombol -->
      <div class="pt-4">
        <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700 transition">
          Simpan Kegiatan
        </button>
      </div>
    </form>
  </div>
</main>
