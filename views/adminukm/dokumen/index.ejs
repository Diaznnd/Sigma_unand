<%- include('../partials/sidebar') %>

<main class="ml-64 w-[calc(100%-16rem)] min-h-screen bg-gradient-to-br from-gray-50 to-white p-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">Daftar Dokumen Kegiatan</h1>
    <a href="/adminukm/dokumen/tambah" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition">
      + Unggah Dokumen
    </a>
  </div>

  <% if (dokumenList.length === 0) { %>
    <div class="bg-white p-6 rounded shadow text-gray-500 text-center">
      Belum ada dokumen yang diunggah.
    </div>
  <% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% dokumenList.forEach(doc => { %>
        <div class="bg-white shadow rounded-xl border p-4 flex flex-col justify-between">
          <div>
            <h2 class="text-lg font-semibold text-gray-800 mb-1"><%= doc.judul %></h2>
            <p class="text-sm text-gray-600 line-clamp-3 mb-3"><%= doc.deskripsi.substring(0, 120) %>...</p>
          </div>
          <div class="mt-auto flex items-center justify-between">
            <a href="<%= doc.file %>" target="_blank" class="text-blue-600 text-sm hover:underline">ðŸ“„ Lihat File</a>
            <form action="/adminukm/dokumen/hapus/<%= doc.id %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus dokumen ini?')">
              <button type="submit" class="text-red-600 text-sm hover:underline">ðŸ—‘ Hapus</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</main>
