<main class="flex-grow w-full flex items-center justify-center p-4 sm:p-6 lg:p-8">

  <div class="w-full max-w-4xl mx-auto bg-[#F5F5DC]/80 backdrop-blur-md rounded-3xl shadow-2xl p-8 md:p-12">

    <h1 class="text-4xl font-bold text-[#4A5C3D] text-center mb-10">Laporan Aktivitas</h1>

    <form action="/laporan/kirim" method="POST" class="space-y-6">
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-center">
        <label for="judul" class="md:text-right text-lg font-semibold text-[#5a704a]">Judul Laporan</label>
        <div class="md:col-span-3">
          <input type="text" id="judul" name="judul" placeholder="Kegiatan A" class="w-full p-3 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8DAA6F]">
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-center">
        <label for="tanggal" class="md:text-right text-lg font-semibold text-[#5a704a]">Tanggal</label>
        <div class="md:col-span-3">
          <input type="text" id="tanggal" name="tanggal" placeholder="dd/mm/yy" class="w-full p-3 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8DAA6F]">
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-start">
        <label for="detail" class="md:text-right pt-2 text-lg font-semibold text-[#5a704a]">Detail</label>
        <div class="md:col-span-3">
          <textarea id="detail" name="detail" rows="5" placeholder="Rincian Kegiatan" class="w-full p-3 bg-white rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-[#8DAA6F]"></textarea>
        </div>
      </div>

      <div class="flex justify-end pt-6">
        <button type="submit" class="bg-[#4A5C3D] text-white font-bold py-2 px-8 rounded-full shadow-lg hover:bg-[#3a4a31] transition-colors">
          kirimkan
        </button>
      </div>

    </form>
  </div>
</main>