  <div>
    <h2 class="text-xl font-bold mb-4 text-green-700">Sigma Unand</h2>
    <p class="text-gray-700 mb-8">
      <i class="fas fa-user-circle mr-2"></i>
      <%= user.first_name %> <%= user.last_name %>
