<div class="min-h-screen w-full bg-gradient-to-br from-blue-100 to-blue-300 flex justify-center items-center">
  <div class="bg-white/30 backdrop-blur-md p-8 rounded-2xl shadow-lg max-w-md w-full">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Daftar Akun</h1>

    <form action="/auth/register" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1 text-sm text-white">Nama Depan</label>
        <input name="first_name" type="text" placeholder="Nama Depan"
          class="w-full px-4 py-2 bg-white/50 text-gray-800 rounded-xl border border-white/50 focus:outline-none focus:ring-2 focus:ring-white placeholder-gray-600" required />
      </div>

      <div>
        <label class="block mb-1 text-sm text-white">Nama Belakang</label>
        <input name="last_name" type="text" placeholder="Nama Belakang"
          class="w-full px-4 py-2 bg-white/50 text-gray-800 rounded-xl border border-white/50 focus:outline-none focus:ring-2 focus:ring-white placeholder-gray-600" required />
      </div>

      <div>
        <label class="block mb-1 text-sm text-white">Email</label>
        <input name="email" type="email" placeholder="Email"
          class="w-full px-4 py-2 bg-white/50 text-gray-800 rounded-xl border border-white/50 focus:outline-none focus:ring-2 focus:ring-white placeholder-gray-600" required />
      </div>

      <div>
        <label class="block mb-1 text-sm text-white">NIM</label>
        <input name="nim" type="text" placeholder="NIM"
          class="w-full px-4 py-2 bg-white/50 text-gray-800 rounded-xl border border-white/50 focus:outline-none focus:ring-2 focus:ring-white placeholder-gray-600" required />
      </div>

      <div>
        <label class="block mb-1 text-sm text-white">Jurusan</label>
        <input name="major" type="text" placeholder="Jurusan"
          class="w-full px-4 py-2 bg-white/50 text-gray-800 rounded-xl border border-white/50 focus:outline-none focus:ring-2 focus:ring-white placeholder-gray-600" required />
      </div>

      <div>
        <label class="block mb-1 text-sm text-white">Password</label>
        <input name="password" type="password" placeholder="Password"
          class="w-full px-4 py-2 bg-white/50 text-gray-800 rounded-xl border border-white/50 focus:outline-none focus:ring-2 focus:ring-white placeholder-gray-600" required />
      </div>

      <button type="submit"
        class="w-full bg-blue-600/90 hover:bg-blue-700 text-white py-2 px-4 rounded-xl font-semibold transition duration-300">
        Daftar
      </button>
    </form>

    <p class="text-sm text-center mt-4 text-white">
      Sudah punya akun?
      <a href="/auth/login" class="text-white font-medium underline hover:text-blue-100">Login di sini</a>
    </p>
  </div>
</div>
